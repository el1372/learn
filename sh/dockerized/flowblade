#!/bin/sh
PS4="> "; set -x

xhost +

docker run --rm -it \
           -v /tmp/.X11-unix:/tmp/.X11-unix \
           -v ~/.asoundrc:/etc/asound.conf  \
           -v ~/.asoundrc:/etc/asound.conf  \
           -v "$PWD":/root/videos           \
           -e DISPLAY=unix$DISPLAY          \
           --device /dev/snd                \
           --name flowblade arpat/docker-flowblade
